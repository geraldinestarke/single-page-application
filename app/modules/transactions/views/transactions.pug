doctype html
div(class='md-content', id='transactions')
  //- side bar
  md-sidenav(class="md-sidenav-left", md-component-id="left", md-is-locked-open="$mdMedia('gt-md')", md-whiteframe="4")

    md-toolbar(class='md-hue-1')
      h1(class='md-toolbar-tools') FINPAL
    md-content(layout-padding, layout-align='center center', class='md-primary')
      p Overview
      p Transactions (3)
      md-divider
      p Transfers (2)
      p Invoices (1)
      md-divider
      p Manage cards
      p Manage accounts
      md-divider
      p Team
      p Integrations
      p Settings

      md-button(class='md-raised') Upgrage Account

  //- transactions table
  md-card
    //- default toolbar
    md-toolbar(class='md-table-toolbar md-default md-accent')
      div(class='md-toolbar-tools')
    //- masterdata records list
    md-card-content
      div
        //- list
        md-table-container
          table(md-table, md-row-select, multiple='', ng-model='vm.selected', md-progress='promise')
            //- columns
            thead(md-head)
              tr(md-row)
                th(md-column, class='text-center') DD-MM-YYYY
                th(md-column, class='text-center') Counterpary Name
                th(md-column, class='text-center') Payment type
                th(md-column, class='text-center') Amount
                th(md-column, class='text-center') Attachement
            //- rows
            tbody(md-body)
              tr(md-select='item', md-select-id='id', ng-repeat='item in vm.transactions')
                td(md-cell, class='text-center') {{item.created_at}}
                td(md-cell, class='text-center') {{item.counterparty_name}}
                td(md-cell, class='text-center') {{item.operation_type}}
                td(md-cell, class='text-center') {{item.amount | currency: item.currency+' '}}
                td(md-cell, class='text-center') {{item.attachements[0].url}}
